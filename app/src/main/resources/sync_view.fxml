<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="dbtools.SyncController"
      spacing="10">

    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <!-- SSH and DB Validation Section -->
    <Label text="🔍 Connection Status" style="-fx-font-size: 14px; -fx-font-weight: bold;" />

    <HBox spacing="10">
        <Button fx:id="checkConnButton"
                text="Open Connections"
                onAction="#openConnections"
                prefWidth="180"/>
                
        <Button fx:id="closeConnButton"
                text="Close Connections"
                onAction="#closeConnections"
                prefWidth="180"/>
                
        <Label fx:id="connStatusLabel" text="Unknown" style="-fx-text-fill: gray;"/>
    </HBox>

    <Separator />

    <!-- Table Selection -->
    <Label text="Table Selector" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
    <ComboBox fx:id="tableSelector" prefWidth="250"/>

    <HBox spacing="10">
        <Button fx:id="syncDataButton" text="Sync Data" onAction="#handleSyncData" disable="true"/>
        <Button fx:id="syncStructButton" text="Sync Structure" onAction="#handleSyncStructure" disable="true"/>
    </HBox>

    <Separator />

    <!-- Log Output -->
    <Label text="Log Output" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
    <TextArea fx:id="logArea"
              prefHeight="200"
              prefWidth="400"
              wrapText="true"
              editable="false"/>
</VBox>